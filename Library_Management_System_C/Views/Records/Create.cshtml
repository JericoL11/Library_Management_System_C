@model Library_Management_System_C.Models.Records

@{
    ViewData["Title"] = "Create";
    Layout = "_LayoutCrud.cshtml";
}

<h1>Create</h1>

<h4>Records</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="borrowerId" class="control-label"></label>
                <select asp-for="borrowerId" class ="form-control" asp-items="ViewBag.borrowerId"></select>
            </div>
            <div class="form-group">
                <label asp-for="due_date" class="control-label"></label>
                <input asp-for="due_date" class="form-control" />
                <span asp-validation-for="due_date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="librarianId" class="control-label"></label>
                <select asp-for="librarianId" class ="form-control" asp-items="ViewBag.librarianId"></select>
            </div>
            <div class="form-group">
                <label asp-for="transac_date" class="control-label"></label>
                <input asp-for="transac_date" class="form-control" value="@DateTime.Now.ToString("yyyy-MM-ddTHH:mm:ss")" />
                <span asp-validation-for="transac_date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
